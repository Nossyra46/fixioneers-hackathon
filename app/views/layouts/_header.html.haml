%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "#"} Project
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "#"}
            Link
            %span.sr-only (current)
        %li
          %a{:href => "#"} Link

      - if @current_organisation
        .navbar-form.navbar-right
          = link_to "Sign out", sessions_path, method: :delete, class: 'btn btn-danger'
      - else
        = form_for Organisation.new, url: sessions_path, html: {class: 'navbar-form navbar-right'} do |f|
          .form-group
            = f.text_field :email, class: 'form-control', placeholder: 'Email'
          .form-group
            = f.password_field :password, class: 'form-control', placeholder: 'Password'
          = f.button "Sign in", class: 'btn btn-success'
