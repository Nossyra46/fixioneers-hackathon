= form_tag refugees_path do
  = file_field_tag :file
  = button_tag "Importer"

= form_tag sms_path do
  = text_area_tag :message
  = button_tag "Envoyer"


%table.table
  %thead
    %tr
      %th Prénom
      %th Numéro
      %th Langue
      %th Tags
  %tbody
    - @refugees.each do |refugee|
      %tr
        %td= refugee.first_name
        %td= refugee.phone_number
        %td= refugee.locale
        %td= refugee.roles.map(&:name).join(', ')
        %td= link_to "Editer", refugee_path(refugee), class: 'btn btn-info'
